@{
    ViewData["Title"] = "Управление базой клиентов";
    @using ClientsWebApp.Controllers
}

<h1 class="text-center">Управление базой клиентов</h1>
<div style="display: flex; justify-content: center;">
    <a class="btn btn-dark" style="display: inline-block; align-self: center; margin:40px 40px 40px 0; color:white;" asp-controller="Clients" asp-action="@nameof(ClientsController.AddClient)">Добавить нового клиента</a>
    <a class="btn btn-dark" style="display: inline-block; align-self: center; margin: 40px 40px 40px 0; color: white;" asp-controller="Clients" asp-action="@nameof(ClientsController.ViewClients)">База клиентов</a>
    <a class="btn btn-dark" style="display: inline-block; align-self: center; margin: 40px 0 40px 0; color: white;" asp-controller="Clients" asp-action="@nameof(ClientsController.ViewFounders)">База учредителей</a>
</div>