@{
    @model ViewClientsModel
    ViewData["Title"] = "Управление базой клиентов";
    @using ClientsWebApp.Controllers
}

<h1 class="text-center">Управление базой клиентов</h1>

<a class="btn btn-dark" style="align-self:center; margin:40px 0 40px 0; color:white;" asp-area="" asp-controller="Clients" asp-action="@nameof(ClientsController.AddClient)">Добавить нового клиента</a>

<div>
    <table class="table-bordered">
        <tr>
            <td width="30">@Html.DisplayNameFor(model => model.Clients[0].Id)</td>
            <td width="200">@Html.DisplayNameFor(model => model.Clients[0].INN)</td>
            <td width="200">@Html.DisplayNameFor(model => model.Clients[0].ClientName)</td>
            <td width="200">@Html.DisplayNameFor(model => model.Clients[0].Type)</td>
            <td width="200">@Html.DisplayNameFor(model => model.Clients[0].AddDate)</td>
            <td width="200">@Html.DisplayNameFor(model => model.Clients[0].UpdateDate)</td>
        </tr>
        @foreach (Client ct in Model.Clients.OrderBy(n => n.ClientName))
        {
            <tr>
                <td>@ct.Id</td>
                <td>@ct.INN</td>
                <td>@ct.ClientName</td>
                <td>@(ct.Type ? "ЮЛ" : "ИП")</td>
                <td>@ct.AddDate.ToString("[HH:mm] (yyyy.MM.dd)")</td>
                <td>@ct.UpdateDate.ToString("[HH:mm] (yyyy.MM.dd)")</td>
                <td> <a class="btn btn-dark" asp-action="@nameof(ClientsController.ChangeFounderClient)" asp-route-id="@ct.Id">Редактирование</a>  </td>
            </tr>
        }
    </table>
    <br />
    <table class="table-bordered" style="margin:auto">
        <tr>
            <td width="30">Id</td>
            <td width="200">ИНН</td>
            <td width="200">ФИО</td>
            <td width="200">Дата добавления</td>
            <td width="200">Дата обновления</td>
        </tr>
        @foreach (Founder fn in Model.Founders.OrderBy(n => n.NameSurname))
        {
            <tr>
                <td>@fn.Id</td>
                <td>@fn.INN</td>
                <td>@fn.NameSurname</td>
                <td>@fn.AddDate.ToString("[HH:mm] (yyyy.MM.dd)")</td>
                <td>@fn.UpdateDate.ToString("[HH:mm] (yyyy.MM.dd)")</td>
                <td> <a class="btn btn-dark" asp-action="@nameof(ClientsController.ChangeFounder)" asp-route-id="@fn.Id">Редактирование</a>  </td>
            </tr>
        }
    </table>
</div>